<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidprototypeapp"
    android:theme="@style/ApplicationStyle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.androidprototypeapp.HomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/ApplicationStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidprototypeapp.LightSwitchActivity"
            android:label="@string/title_activity_light_switch" >
        </activity>
        <activity
            android:name="com.example.androidprototypeapp.CentralHeatingActivity"
            android:label="@string/title_activity_central_heating"
            android:parentActivityName="com.example.androidprototypeapp.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidprototypeapp.MainActivity" />
        </activity>
        <activity
            android:name="com.example.androidprototypeapp.TelevisionActivity"
            android:label="@string/title_activity_television" >
        </activity>
    </application>

</manifest>